<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWall" android:tag="layout/fragment_personal_center_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_bg"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:contentDescription="@string/iv"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_persona_center_bg"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_portrait"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_marginBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:contentDescription="@string/iv"
                    android:focusable="true"
                    android:src="@drawable/ic_default_portrait"
                    app:layout_constraintBottom_toTopOf="@id/tv_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="21dp"
                    android:hint="@string/click_to_update_own_info"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.cuitianci.scanner.view.InfoListCardView
                    android:id="@+id/cv_person_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cardViewMargin"
                    android:layout_marginTop="@dimen/cardViewMargin"
                    android:layout_marginEnd="@dimen/cardViewMargin"
                    android:background="@color/colorPrimary"
                    app:cardCornerRadius="@dimen/cardViewRadius"
                    app:layout_constraintTop_toBottomOf="@id/iv_bg"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_company_info"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="@dimen/cardViewMargin"
                    android:layout_marginTop="@dimen/cardViewMargin"
                    android:layout_marginEnd="@dimen/cardViewMargin"
                    android:background="@color/colorPrimary"
                    app:cardCornerRadius="@dimen/cardViewRadius"
                    app:layout_constraintTop_toBottomOf="@id/cv_person_info">


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_labels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cardViewMargin"
                    android:layout_marginTop="@dimen/cardViewMargin"
                    android:layout_marginEnd="@dimen/cardViewMargin"
                    android:layout_marginBottom="24dp"
                    android:background="@color/colorPrimary"
                    app:cardCornerRadius="@dimen/cardViewRadius"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_company_info">

                    <com.cuitianci.scanner.view.DynamicAddableChipGroup
                        android:id="@+id/chip_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:chipSpacingHorizontal="19dp"
                        app:chipSpacingVertical="10dp" />

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <!--渐变背景，高度为vBar + 状态栏-->
        <View
            android:id="@+id/c_color_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/v_bar"
            app:layout_constraintTop_toTopOf="parent" />

        <!--占位-->
        <View
            android:id="@+id/v_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="@dimen/fakeStatusBarSize"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_card_details"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/spTitleTextSize"
            app:layout_constraintBottom_toBottomOf="@id/v_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_bar" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="14dp"
            android:text="@string/back"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/spNormalTextSize"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="14dp"
            android:text="@string/edit"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/spNormalTextSize"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
         